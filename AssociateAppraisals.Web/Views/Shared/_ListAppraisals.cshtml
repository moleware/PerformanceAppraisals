@model IEnumerable<AssociateAppraisals.Model.Appraisal>
@using AssociateAppraisals.Model;

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ReviewYear)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>
    
@foreach(var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ReviewYear)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.ActionLink("Edit Questions", "ListAppraisalQuestions", new { id = item.AppraisalId }) |
            @Html.ActionLink("View All Appraisals", "ListAssociateAppraisals", new { id = item.AppraisalId }) 
        </td>
    </tr>
}

</table>