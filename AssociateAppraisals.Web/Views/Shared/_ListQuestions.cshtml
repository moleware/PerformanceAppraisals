@model IEnumerable<AssociateAppraisals.Model.AppraisalQuestion>
@using AssociateAppraisals.Model;

[This is where the New Question button goes]
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.QuestionNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Question)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppraisalQuestionGroup)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AppraisalQuestionType)
        </th>
        <th></th>
    </tr>
    
@foreach(var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.QuestionNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Question)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppraisalQuestionGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AppraisalQuestionType)
        </td>
        <td>
          [This is where the action buttons Edit and Delete go]
        </td>
    </tr>
}
</table>